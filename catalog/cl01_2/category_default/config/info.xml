-->
		<var name="enable" type="select" use="1">
			<title>公開設定</title>
			<options>
				<Y>公開</Y>
				<N>非公開</N>
				<T>公開期間指定</T>
			</options>
			<default>Y</default>
      <sns>Y</sns>
			<attributes />
		</var>
		<var name="start" type="date" use="1">
			<title>公開開始日時</title>
			<attributes class="datepicker required" />
		</var>
		<var name="end" type="date" use="1">
			<title>公開終了日時</title>
			<attributes class="datepicker required" />
		</var>

